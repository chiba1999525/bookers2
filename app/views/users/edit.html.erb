<h1>User info</h1>

    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
         <% @user.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
     <% end %>

<%= form_with model:@user, local:true do |f| %>

  <p><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></p>

  <p><label for="inputIntroduction">Introduction</label>
  <%= f.text_field :Introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%></p>

  <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>

  <p><%= f.submit "Update User" %></p>

<% end %>