<div class="container">
  <div class="row">

      <div class="col-lg-4">

        <h1>User info</h1>
        <div>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>

        <div>
          <table>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.Introduction %></td>
            </tr>
          </table>
        </div>

         <%= link_to "user edit", edit_user_path(@user.id) %>


        <h1>New book</h1>
       <%= form_with model: @book, local:true do |f| %>

         <h4>title</h4>
          <%= f.text_field :title %>
         <h4>opinion</h4>
          <%= f.text_area :opinion %>
         <%= f.submit 'create book' %>

        <% end %>

      </div>

      <div class="col-lg-8">
    <tabel clss="table table-striped">

      <h1>Books</h1>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <% @books.each do |book|%>
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
                 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %></td>

            <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %></td>
            <td><%= book.opinion %></td>
          </tr>
        </tbody>
      <% end %>
      </table>

    </tabel>
      </div>

  </div>
</div>